<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CongratsFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/yeonsungregular"
            android:text="Congrats\n Your order has\n been placed"
            android:textAlignment="center"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:src="@drawable/congratulation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goHome"
            android:background="@drawable/go_home_button_shape"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:layout_marginBottom="100dp"
            android:textSize="20sp"
            android:fontFamily="@font/yeonsungregular"
            android:text="Go To Home"
            android:textColor="@color/white"/>
    </LinearLayout>

</FrameLayout>